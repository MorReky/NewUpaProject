<Page x:Class="UpaProject.Views.Catalogs.EqCatalog.PersonsCatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:UpaProject.ViewModels"
      xmlns:local="clr-namespace:UpaProject.Views.Catalogs.EqCatalog"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Справочник сотрудников">
    <Page.DataContext>
        <vm:PersonsCatalogPageViewModel/>
    </Page.DataContext>
    <DockPanel LastChildFill="True">

        <GroupBox DockPanel.Dock="Top">
            <GroupBox.Header>
                <TextBlock Style="{StaticResource Txt}"
                           Text="Редактирование"
                           FontSize="10pt"/>
            </GroupBox.Header>
            <StackPanel Orientation="Horizontal"                    
                    Margin="5">
                <Button Style="{StaticResource BtnFrame}"
                    Content="Новый сотрудник"
                        Command="{Binding AddPerson}"/>
                <Button Style="{StaticResource BtnFrame}"
                        Content="Удалить"
                        Command="{Binding DeletePosition}"/>
                <Button Style="{StaticResource BtnFrame}"
                        Content="Обновить"
                        Command="{Binding ResourceUpdate}"/>
            </StackPanel>
        </GroupBox>
        <DataGrid Margin="10"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  CanUserAddRows="False"
                  ItemsSource="{Binding TableSource, Mode=TwoWay}"
                  SelectedItem="{Binding SelectedRow}"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" Binding="{Binding Name }" />
                <DataGridTextColumn Header="Должность" Binding="{Binding Role}"/>
                <DataGridTemplateColumn Header="Статус">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox Text="{Binding StatusValues.Status,Mode=TwoWay}">
                                <ComboBoxItem Content="Работает"/>
                                <ComboBoxItem Content="Уволен"/>
                                <ComboBoxItem Content="В отпуске"/>
                            </ComboBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn IsReadOnly="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox Text="{Binding WorkGroupValues.WorkGroup,Mode=TwoWay}">
                                <ComboBoxItem Content="Неопределено"/>
                                <ComboBoxItem Content="Рабочий"/>
                                <ComboBoxItem Content="ИТР"/>
                            </ComboBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>
